mixin info-block()
    span.validation-icon
    span.tooltip-icon= htmlWebpackPlugin.options.hint_text
    .tooltip= attributes.hint_text
        img(src=attributes.hint_img, alt='')
    p.error-text= attributes.errortext
    p.description= attributes.description



mixin input(label, name, placeholder, value)
    div(class=name)
        label(for=name + "-input")= label
        .input-block
            input(
                id=name + "-input",
                type="text",
                name="pay_form[" + name + "]",
                placeholder=placeholder,
                maxlength=attributes.maxlength,
                value=value
                autocomplete="off"
            )

            +info-block(
                errortext = 'pay_form.attributes.' + name + '.error',
                description = attributes.description,
                hint_text = attributes.hint_text,
                hint_img = attributes.hint_img
            )


mixin select(name, placeholder, start_val, end_val)
    - var item = start_val

    select(
        id="card_exp_#{name}-select",
        class="card_exp_#{name}",
        name="pay_form[card_exp_#{name}]"
    )
        option(value="")= placeholder
        while item < end_val + 1
            option(value=item)= item++


